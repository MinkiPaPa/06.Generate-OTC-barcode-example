<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/date_listitem"
        android:layout_width="118dp"
        android:layout_height="32dp"
        android:padding="5dp"
        android:text="wdate"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/name_listitem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_listitem"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/date_listitem"
        app:layout_constraintRight_toLeftOf="@id/amount_listitem"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:text="wname"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/amount_listitem"
        android:layout_width="102dp"
        android:layout_height="27dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="amt"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/name_listitem"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
